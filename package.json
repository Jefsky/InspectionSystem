{
  "name": "inspection-system",
  "version": "1.0.0",
  "private": true,
  "description": "一个用于监控网站可访问性和SSL证书状态的系统",
  "author": "Jefsky",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server/index.js",
    "start": "node server/index.js",
    "test": "echo \"No tests specified\" && exit 0",
    "lint": "eslint . --ext .js,.vue",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"electron electron/main.js\"",
    "electron:build": "vite build && electron-builder --dir",
    "electron:dist": "vite build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "echarts": "^5.6.0",
    "element-plus": "^2.3.12",
    "express": "^4.18.2",
    "https": "^1.0.0",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.0.2",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.3.4",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.6.4",
    "eslint": "^8.48.0",
    "eslint-plugin-vue": "^9.17.0",
    "vite": "^4.4.9"
  },
  "build": {
    "appId": "com.jefsky.inspectionsystem",
    "productName": "Website Inspection System",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/favicon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/favicon.ico"
    }
  }
}
